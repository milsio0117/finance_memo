<%= form_with model: new_stock, url: stocks_path, class: "new-stock-form", local: true do |form| %>
        <div class="form-group">
          <%= form.label :ticker %>
          <%= form.text_field :ticker, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit '+ New Stock', class: "new_stock_link" %>
        </div>
      <% end %>