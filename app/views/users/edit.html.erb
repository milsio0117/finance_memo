<h2>アカウント編集</h2>

<%= form_for(@user, html: { method: :put, multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "新しいパスワード" %> (6文字以上)<br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <small>変更しない場合は空のままにしてください。</small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "現在のパスワード" %> (確認用)<br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "アカウントを削除する", user_registration_path(@user), method: :delete, data: { confirm: "本当にアカウントを削除しますか？" }, class: "btn btn-danger mt-3" %>

<%= link_to "もどる", root_path, class: "btn btn-secondary mt-3" %>
